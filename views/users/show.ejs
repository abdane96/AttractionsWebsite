<% include ../partials/header %>
<div class="row profileBody">
    <span class="col-sm-1 d-none d-sm-block d-lg-none"></span>
    <div class="col-sm-10 col-lg-4">
        <h1 class="usernameH1"> <%= user.username.charAt(0).toUpperCase() + user.username.slice(1)%> </h1>
        <figure>
            <img class="userImage" src="<%=user.avatar%>" alt='user profile image'>
        </figure>
    </div>
    <div class="col-sm-12 col-lg-6 profileInfo">
        <h2 class="labels">First Name:
            <% if(user.firstName !== ""){%>
                <%= user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1)%>
            <% }else{ %>
                Not Provided
            <% } %>
        </h2>
        <h2 class="labels">Last Name:
            <% if(user.lastName !== ""){%>
                <%= user.lastName.charAt(0).toUpperCase() + user.lastName.slice(1)%>
            <% }else{ %>
                Not Provided
            <% } %>
        </h2>
        <h2 class="labels">Email:
        <% if(user.email !== ""){%>
                <%= user.email %>
            <% }else{ %>
                Not Provided
            <% } %>
        </h2>
    </div>
    <!--<span class="col-sm-1 d-none d-sm-block d-lg-none"></span>-->
    <div class="row">
        <span class="col-sm-1 col-lg-3"></span>
        <div class="col-sm-10 col-lg-6">
            <form action="/users/<%= user.id %>/edit" method="get">
                <button class="editButton btn btn-lg btn-primary btn-block">Edit profile</button>
            </form>
        </div>
        <!--<span class="col-sm-1"></span>-->
    </div>
</div>
<!--<script type="text/javascript" src="/scripts/editPopup.js"></script>-->
<% include ../partials/footer %>