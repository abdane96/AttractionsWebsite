<% include ../partials/header %>
    <div class="backgroundImage"></div>
    <div class="row">
        <h1 class="col-sm-12 login-signup-h1">Edit <%= user.firstName%>'s Profile</h1>
        <span class="col-lg-4 col-sm-1"></span>
        <div class="col-lg-4 col-sm-10">
            <form action="/users/<%= user.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="user[username]" placeholder="username" value="<%= user.username %>">
                </div>
            	<div class="form-group">
                    <input class="form-control" type="text" name="user[firstName]" placeholder="first name (optional)" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[lastName]" placeholder="last name (optional)" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="user[email]" placeholder="email (optional)" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[avatar]" placeholder="avatar url (optional)" value="<%= user.avatar %>">
                </div>
                <div class="form-group">
                    <button class="login-signup-button btn btn-lg btn-primary btn-block">Submit changes</button>
                </div>
            </form>
        </div>
        <span class="col-lg-4 col-sm-1"></span>
    </div>
<% include ../partials/footer %>