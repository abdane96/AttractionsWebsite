<% include ./partials/header %>
    <div class="backgroundImage"></div>
    <div class="row">
        <h1 class="col-sm-12 login-signup-h1">Log in</h1>
        <span class="col-lg-4 col-sm-1"></span>
        <div class="col-lg-4 col-sm-10">
            <form action="/login" method="post">
                <% if(error.length > 0){ %>
            		<div class="container login-signup-flash">
            			<%if(error && error.length > 0){ %>
            				<div class="alert alert-danger" role="alert">
            					<%=error%>
            				</div>
            			<% } %>
            		</div>
            	<% } %>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username/email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="login-signup-button btn btn-lg btn-primary btn-block">Login!</button>
                </div>
            </form>
        </div>
        <span class="col-lg-4 col-sm-1"></span>
    </div>
<% include ./partials/footer %>